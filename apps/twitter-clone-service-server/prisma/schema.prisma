datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Tweet {
  author    String?
  comments  Comment[]
  content   String?
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  likes     Int?
  retweets  Int?
  updatedAt DateTime  @updatedAt
}

model Follow {
  createdAt DateTime @default(now())
  followee  String?
  follower  String?
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}

model Comment {
  author    String?
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
}

model Like {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  bio       String?
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  fullName  String?
  id        String   @id @default(cuid())
  lastName  String?
  likes     Like[]
  location  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
  website   String?
}
